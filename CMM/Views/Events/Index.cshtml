@model IEnumerable<CMM.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="overflow-auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertPoster)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertMusician)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertLink)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConcertVisibility)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ConcertPoster)"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertMusician)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertDateTime)
                </td>
                <td>
                    RM @Html.DisplayFor(modelItem => item.ConcertPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketLimit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcertVisibility)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ConcertID">Edit</a><br />
                    <a asp-action="Details" asp-route-id="@item.ConcertID">Details</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.ConcertID">Delete</a> <br />
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>