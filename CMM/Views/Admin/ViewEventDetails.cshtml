@model CMM.Models.Event

@{
    ViewData["Title"] = "View Event Details";
}

<h1>View Event Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Concert Poster
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ConcertPoster)" />
        </dd>
        <dt class = "col-sm-2">
            Concert Musician
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertMusician)
        </dd>
        <dt class = "col-sm-2">
            Concert Link
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertLink)
        </dd>
        <dt class = "col-sm-2">
           Concert Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertName)
        </dd>
        <dt class = "col-sm-2">
           Concert Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertDescription)
        </dd>
        <dt class = "col-sm-2">
            Concert Date &amp; Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertDateTime)
        </dd>
        <dt class = "col-sm-2">
           Concert Price
        </dt>
        <dd class = "col-sm-10">
            RM @Html.DisplayFor(model => model.ConcertPrice)
        </dd>
        <dt class = "col-sm-2">
           Tickets
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketLimit)
        </dd>
        <dt class = "col-sm-2">
            Concert Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertStatus)
        </dd>
        <dt class = "col-sm-2">
            Visibility
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertVisibility)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Admin" asp-action="EditVirtualEvent" asp-route-id="@Model.ConcertID">Edit</a> |
    <a asp-controller="Admin" asp-action="ListVirtualEvent">Back to View Active Events</a>
</div>
